<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.khulud.gathering.fragmnets.StartingFragment">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageView"
        android:layout_width="412dp"
        android:layout_height="249dp"
        android:fitsSystemWindows="true"
        android:background="@color/purple_700"
        android:paddingBottom="2dp"
        android:src="@drawable/mainpageimage"
        app:layout_constraintCircleRadius="55dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnToSignIn"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginBottom="172dp"
        app:backgroundTint="@color/purple_700"
        android:text="@string/Sign_in"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="DuplicateClickableBoundsCheck" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnToProfile"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginBottom="172dp"
        app:backgroundTint="@color/purple_700"
        android:text="@string/Profile"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnToReg"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginBottom="100dp"
        android:text="@string/Registration"
        app:cornerRadius="30dp"
        app:backgroundTint="@color/purple_700"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btnToSignIn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnToSignIn" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnTologout"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginBottom="100dp"
        app:backgroundTint="@color/purple_700"
        android:text="@string/Sign_out"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btnToProfile"
        app:layout_constraintHorizontal_bias="0.09"
        app:layout_constraintStart_toStartOf="@+id/btnToProfile" />




</androidx.constraintlayout.widget.ConstraintLayout>